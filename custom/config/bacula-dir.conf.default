#  For Bacula release 3.0.3 (18 October 2009) -- ubuntu 8.04

Director {                            # define myself
  Name = nimbus-dir
  DIRport = 9101                # where we listen for UA connections
  QueryFile = "/opt/bacula/etc/query.sql"
  WorkingDirectory = "/opt/bacula/var/bacula/working"
  PidDirectory = "/var/run"
  Maximum Concurrent Jobs = 100
  Password = "nimbuspass"         # Console password
  Messages = Daemon
}

JobDefs {
  Name = "NimbusDefaultJob"
  Type = Backup
  Level = Incremental
  Client = nimbus-fd 
  FileSet = "NimbusSet"
  Schedule = "NimbusSche"
  Storage = File
  Messages = Standard
  Pool = NimbusPool
  Priority = 10
}


Job {
  Name = "NimbusJob"
  JobDefs = "NimbusDefaultJob"
  Write Bootstrap = "/opt/bacula/var/bacula/working/nimbus.bsr"
}


Job {
  Name = "NimbusRestore"
  Type = Restore
  Client=nimbus-fd                 
  FileSet="NimbusSet"                  
  Storage = File                      
  Pool = "NimbusPool"
  Messages = Standard
  Where = /tmp/bacula-restores
}

FileSet {
  Name = "NimbusSet"
  Include {
    Options {
      signature = MD5
    }
    File = /opt/bacula/
  }

  Exclude {
    File = /opt/bacula/var/bacula/working
    File = /tmp
    File = /proc
    File = /tmp
    File = /.journal
    File = /.fsck
  }
}

Schedule {
  Name = "NimbusSche"
  Run = Full 1st sun at 23:05
  Run = Differential 2nd-5th sun at 23:05
  Run = Incremental mon-sat at 23:05
}

Pool {
  Name = NimbusPool
  Pool Type = Backup
  Recycle = yes                       # Bacula can automatically recycle Volumes
  AutoPrune = yes                     # Prune expired volumes
  Volume Retention = 365 days         # one year
}


Client {
  Name = nimbus-fd
  Address = 127.0.0.1
  FDPort = 9102
  Catalog = MyCatalog
  Password = "nimbuspass"          # password for FileDaemon
  File Retention = 30 days            # 30 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files
}

Storage {
  Name = File
  Address = 127.0.0.1                # N.B. Use a fully qualified name here
  SDPort = 9103
  Password = "nimbuspass"
  Device = FileStorage
  Media Type = File
}

Catalog {
  Name = MyCatalog
  dbname = "bacula"; dbuser = "bacula"; dbpassword = ""
}

Messages {
  Name = Standard
  mail = root@localhost = all, !skipped            
  operator = root@localhost = mount
  console = all, !skipped, !saved
  append = "/opt/bacula/var/bacula/working/log" = all, !skipped
  catalog = all
}

Messages {
  Name = Daemon
  mail = root@localhost = all, !skipped            
  console = all, !skipped, !saved
  append = "/opt/bacula/var/bacula/working/log" = all, !skipped
}
